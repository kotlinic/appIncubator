<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp" android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/imageViewGood"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:src="@drawable/home_normal"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewGood"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textSize="16sp"
            android:text="人闲钱不闲，抢钱剩三天！"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/imageViewGood"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:text="2017-1-22"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="@color/red"/>

</LinearLayout>
